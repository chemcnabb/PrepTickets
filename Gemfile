# A sample Gemfile
source "https://rubygems.org"

gem 'sprockets'        # Asset packaging
gem 'sass'             # Scss
gem 'coffee-script'    # CoffeScript

gem 'yui-compressor'   # CSS compressor
gem 'uglifier'         # JS compressor

gem 'rack'             # basic web server responder
gem 'rake'             # Similar to 'make' on linux but for ruby

gem 'active_support'   # Adds a bunch of helpers to Ruby (comes from rails)

gem 'rack-livereload'  # live reload client
gem 'guard-livereload' # live reload server
